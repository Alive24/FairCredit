{
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "npm run test:contracts",
    "test:contracts": "cargo build-sbf --manifest-path anchor/programs/fair-credit/Cargo.toml --sbf-out-dir anchor/target/deploy && cargo test -p fair-credit --manifest-path anchor/Cargo.toml",
    "coverage:contracts": "cargo build-sbf --manifest-path anchor/programs/fair-credit/Cargo.toml --sbf-out-dir anchor/target/deploy && cargo llvm-cov -p fair-credit --manifest-path anchor/Cargo.toml --lcov --output-path anchor/lcov.info",
    "test:anchor": "anchor test --skip-local-validator",
    "test:fast": "SKIP_STANDARD=true ts-mocha -p ./tsconfig.json -t 60000 app/tests/provider.test.ts",
    "test:security": "ts-mocha -p ./tsconfig.json -t 120000 app/tests/provider.test.ts --grep 'Security Tests'",
    "test:program": "npm run test:contracts",
    "test:app": "npx playwright test",
    "test:full": "npm run test:program && npm run test:app",
    "dev": "cd app && netlify dev",
    "validator": "solana-test-validator --reset --quiet --clone-upgradeable-program metaqbxxUerdq28cj1RbAWkYQm3ybzjb6a8bt518x1s --url https://api.mainnet-beta.solana.com",
    "gen:client": "npx codama run --all",
    "build:full": "cd anchor && anchor build && cd .. && npm run gen:client",
    "deploy": "npx tsx scripts/deploy/index.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana-program/system": "^0.10.0",
    "@solana/client": "^1.7.0",
    "@solana/kit": "^5.5.1",
    "@solana/signers": "^2.0.0"
  },
  "devDependencies": {
    "@codama/nodes-from-anchor": "^1.3.8",
    "@codama/renderers-js": "^1.6.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "codama": "^1.5.0",
    "litesvm": "^0.5.0",
    "mocha": "^9.0.3",
    "netlify-cli": "^23.14.0",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
